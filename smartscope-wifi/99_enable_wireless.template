#!/bin/sh
#This gets filled in by the makefile
SSID=

uci set firewall.@zone[1].network='wan wan6 wwan'
uci set firewall.@zone[1].input='ACCEPT'
uci commit firewall

uci set network.wwan=interface
uci set network.wwan.proto='dhcp'
uci commit network

